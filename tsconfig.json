{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@components": ["./components"],
      "@pages": ["./pages"],
      "@theme": ["./theme"],
      "@hooks": ["./hooks"],
      "@constants": ["./constants"],
      "@helpers": ["./helpers"],
      "@translations": ["./translations"],
      
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@pages/*": ["./pages/*"],
      "@theme/*": ["./theme/*"],
      "@hooks/*": ["./hooks/*"],
      "@helpers/*": ["./helpers/*"],
      "@translations/*": ["./translations/*"]
    }
  }
}
